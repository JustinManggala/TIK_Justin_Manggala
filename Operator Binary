#include <iostream>
#include <math.h>
using namespace std;

int main(){
    //operator aritmatika
    int a = 78;
    int b = 4;
    
    int hasiltambah = a + b;//penjumlahan
    int hasilkurang = a-b;//pengurangan
    int hasilbagi = a / b; //pembagian
    int hasilkali = a * b;//perkalian
    int sisabagi = a % b;
    
    
    
    
    cout<<hasiltambah<<endl;
    cout<<hasilkurang<<endl;
    cout<<hasilbagi<<endl;
    cout<<hasilkali<<endl;
    cout<<sisabagi<<endl;
    
    return 0;
}
